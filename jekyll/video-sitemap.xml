---
layout: null
---
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">
	{% for page in site.pages %}
		{% if page.hero == true %}
			<url>
				<loc>{{ site.url }}{{ page.url }}</loc>
				<video:video>
					<video:thumbnail_loc>
						{{ site.url }}{{ site.video }}{% if work.title %}{{ work.title | downcase | slugify }}{% else %}{{ page.title | downcase | slugify }}{% endif %}.jpg
					</video:thumbnail_loc>
					<video:title>
						{{page.title}}
					</video:title>
					<video:description>
						{{page.title}}
                	</video:description>
                	<video:content_loc>
                		{{ site.url }}{{ site.video }}{{ page.title | downcase | slugify }}.mp4
                	</video:content_loc>
					{% if page.published %}
						<video:publication_date>
							{{ page.published }}
						</video:publication_date>
					{% endif %}
				</video:video>
			</url>
		{% endif %}
	{% endfor %}
	{% for work in site.work %}
		{% if work.hero == true %}
			<url>
				<loc>{{ site.url }}{{ work.url }}</loc>
				<video:video>
					<video:thumbnail_loc>
						{{ site.url }}{{ site.video }}{% if work.title %}{{ work.title | downcase | slugify }}{% else %}{{ page.title | downcase | slugify }}{% endif %}.jpg
					</video:thumbnail_loc>
					<video:title>
						{{work.title}}
					</video:title>
					<video:description>
						{{work.title}}
					</video:description>
                	<video:content_loc>
                		{{ site.url }}{{ site.video }}{{ work.title | downcase | slugify }}.mp4
                	</video:content_loc>
                	{% if work.published %}
						<video:publication_date>
							{{ work.published }}
						</video:publication_date>
					{% endif %}
				</video:video>
			</url>
		{% endif %}
	{% endfor %}
</urlset>